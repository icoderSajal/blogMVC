@model IMageCurd.Models.employee

@{
    ViewBag.Title = "Details";
}
<style>
    img {
        border: none;
        border-radius: 10px;
        transition: 0.5s all;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }
    img:hover{
        transform:scale(1.1);
    }
</style>



<div>
    <br/>
    <hr/>
</div>
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <img src="@Url.Content(Model.image_path)" height="500px" width="500px" />
            </div>
            <div class="col-md-4">
                <h2 class="text-center">Details</h2>
                <h2 class="text-center"><b>Name</b> @Html.DisplayFor(model => model.name)</h2>
                <h4 class="text-center"><b>Degisnation</b>  @Html.DisplayFor(model => model.degisnation)</h4>
                <p class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-primary" })
                </p>
            </div>
            
        </div>
    </div>
</div>
